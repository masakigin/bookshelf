<% if current_user.favorite?(book) %>
  <%= form_tag(favorite_path(book.id), method: :delete) do %>
    <%= hidden_field_tag :book_id, book.id %>
    <%= submit_tag 'Unfavorite', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(favorites_path) do %>
    <%= hidden_field_tag :book_code, book.code %>
    <%= submit_tag 'favorite', class: 'btn btn-primary' %>
  <% end %>
<% end %>